{
  "settings": {
    "analysis": {
      "analyzer": {
        "split_on_bar": {
          "type": "custom",
          "tokenizer": "split_on_bar"
        },
        "filename_index": {
          "type": "custom",
          "filter": [
            "lowercase",
            "asciifolding",
            "ngram_3_20"
          ],
          "tokenizer": "filename"
        },
        "path_analyzer": {
          "type": "custom",
          "tokenizer": "path_tokenizer"
        }
      },
      "filter": {
        "ngram_3_20": {
          "type": "nGram",
          "min_gram": "3",
          "max_gram": "20"
        }
      },
      "tokenizer": {
        "split_on_bar": {
          "pattern": "[|]",
          "type": "pattern"
        },
        "filename": {
          "pattern": "[^\\p{L}\\d]+",
          "type": "pattern"
        },
        "path_tokenizer": {
          "type": "path_hierarchy"
        }
      }
    }
  }
}

